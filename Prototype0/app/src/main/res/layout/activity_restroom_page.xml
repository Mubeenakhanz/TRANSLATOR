<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#347B98"
    tools:context=".RestroomPage">

    <Button
        android:id="@+id/toiletBtn4"
        android:layout_width="407dp"
        android:layout_height="117dp"
        android:layout_marginTop="12dp"
        android:background="#F0F7D4"
        android:onClick="playSound"
        android:text="It Really hurts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toiletBtn3" />

    <Button
        android:id="@+id/toiletBtn3"
        android:layout_width="407dp"
        android:layout_height="117dp"
        android:layout_marginTop="12dp"
        android:background="#F0F7D4"
        android:onClick="playSound"
        android:text="We Had An ACCident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toiletBtn2" />

    <Button
        android:id="@+id/toiletBtn2"
        android:layout_width="407dp"
        android:layout_height="117dp"
        android:layout_marginTop="12dp"
        android:background="#F0F7D4"
        android:onClick="playSound"
        android:text="we need a doctor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toiletBtn1" />

    <View
        android:id="@+id/divider3"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="80dp"
        android:background="#9C27B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goBackToiletBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="276dp"
        android:background="#66B032"
        android:text="@string/secondPageBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toiletBtn1"
        android:layout_width="407dp"
        android:layout_height="117dp"
        android:layout_marginTop="80dp"
        android:background="#F0F7D4"
        android:onClick="playSound"
        android:text="Where is the nearest hospital?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>